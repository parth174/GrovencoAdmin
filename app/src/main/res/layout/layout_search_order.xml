<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_parent"
    android:foreground="?attr/selectableItemBackground"
    android:paddingTop="5dp"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_item"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ll_order_id"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_order_amount"
            android:text="224"
            android:textSize="18sp"
            android:textColor="@color/quantum_grey900"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:id="@+id/ll_order_id"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="11sp"
                android:text="ORDERID : "
                android:id="@+id/tv_order_id_text"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/quantum_grey900"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="8988679"
                android:id="@+id/tv_order_id"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_item"
            android:orientation="vertical">






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Parth Dhar"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:textColor="@color/colorTheme"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="8787776789"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_phone_number"
                android:textColor="@color/grey"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="parth.dhar@gmail.com"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_email"
                android:textColor="@color/grey" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_item"
        android:layout_marginTop="20dp"
        android:background="@color/quantum_grey300"/>


</RelativeLayout>